<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.amandariu.tagger.TagListFragment"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_availableTagsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/available_tags"
        style="@style/TaggerLabel"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layoutManager="LinearLayoutManager"
        tools:listitem="@layout/row_item_tag_list"
        style="@style/TaggerFragmentLayout"/>
</LinearLayout>