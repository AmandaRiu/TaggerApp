<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="LoadingStyle">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="MainLabelFont">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FF000000</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="MainLabelFont.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MainButtonStyle" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MainListItemStyle">
        <item name="android:textSize">10sp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="MainListItemStyle.RowNumber">
        <item name="android:gravity">end</item>
    </style>

    <style name="MainListItemStyle.Tag">
        <item name="android:gravity">start</item>
    </style>
</resources>
